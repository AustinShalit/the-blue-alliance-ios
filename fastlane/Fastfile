# Customise this file, documentation can be found here:
# https://github.com/fastlane/fastlane/tree/master/fastlane/docs
# All available actions: https://docs.fastlane.tools/actions
# can also be listed using the `fastlane actions` command

setup_travis

# If you want to automatically update fastlane if a new version is available:
# update_fastlane

default_platform :ios

platform :ios do

  desc "Runs all the tests"
  lane :test do
    test_unit
    test_ui
  end

  desc "Run only the unit tests"
  lane :test_unit do
    # Run unit tests
    run_tests(
      scheme: "tba-unit-tests",
      devices: ["iPhone X (11.4)", "iPhone X (12.0)"]
    )
  end

  desc "Run only the UI tests on 3 devices (square device, notch device, and iPad) and two platforms (iOS 11.4 and iOS 12)"
  lane :test_ui do
    # Run UI tests
    run_tests(
      scheme: "tba-ui-tests",
      devices: ["iPhone 8 Plus (11.4)", "iPhone 8 Plus (12.0)", "iPhone X (11.4)", "iPhone X (12.0)", "iPad Pro (12.9-inch) (11.4)", "iPad Pro (12.9-inch) (12.0)"],
    )
  end

end

error do |lane, exception|
  slack(
    message: exception.to_s,
    success: false,
    username: "Travis CI",
  ) if is_ci? && ENV['SLACK_URL'] && git_branch == "master"
end
